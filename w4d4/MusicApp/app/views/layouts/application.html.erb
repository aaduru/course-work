<!DOCTYPE html>
<html>
<head>
  <title>MusicApp</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <% if current_user %>
    <%= current_user.email %>
    <%= button_to("Logout", session_url, method: :delete) %>
    <%#= link_to "login", new_session_url %>
  <% end %>

  <% if flash[:messages] %>
    <ul>
      <% flash[:messages].each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <% if flash[:errors] %>
    <ul>
      <% flash[:errors].each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <%= yield %>

</body>
</html>
