<h1>Edit the ALBUM</h1>

<form action="<%= album_url(@album) %>" method="POST">
  <input type ="hidden" name ="_method" value = "PATCH">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

    <label for="album_name">Name of the Album</label>
    <input id= "album_name"type="text" name="album[title]" value="<%= @album.title %>">
    <br>
    <label for="album_yr">Album's release yr</label>
    <input id= "album_yr"type="text" name="album[yr]" value="<%= @album.yr %>">
    <br>
    <label>Band </label>
    <select name="album[band_id]">
        <% Band.all.each do |band| %>
            <option value="<%= band.id %>">
                <%= band.name %>
            </option>
        <% end %>
    </select>

    <br>
  <br>
  <input type="submit" value="SUBMIT">
</form>
