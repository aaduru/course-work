<%= action_url = band.persisted? ? band_url(@band) : bands_url %>
<%= http_verb = band.persisted? ? "PATCH" : "POST" %>

<form action="<%= action_url %>" method="POST">
    <input type ="hidden" name ="_method" value = "<%= http_verb %>">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

    <label for="band_name"> Name of the Band</label>
    <input id= "band_name"type="text" name="band[name]" value="<%= @band.name %>">

  <input type="submit" value="SUBMIT">
</form>
