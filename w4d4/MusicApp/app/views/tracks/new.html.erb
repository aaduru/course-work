<h1>Add a New Song</h1>

<form action="<%= tracks_url %>" method="POST">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

    <label for="track_name">Song</label>
    <input id= "track_name"type="text" name="track[song]" value="">
    <br>
    <br>
    <label for="album_id">Album's name</label>
    <select name="track[album_id]">
        <% Album.all.each do |album| %>
            <option value="<%= album.id %>">
                <%= album.title %>
            </option>
        <% end %>
    </select>
    <br>
    <br>

    <label for="lyrics"> Lyrics: </label>
    <textarea name="track[lyrics]" rows="8" cols="80"></textarea>
  <br>
  <br>
  <label for="ord">ORD</label>
  <input id= "ord" type="text" name="track[ord]" value="">

  <br>
  <br>
  <input type="submit" value="SUBMIT">
</form>
